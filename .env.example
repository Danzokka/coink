# Docker Compose - Variáveis de ambiente
# Copie para .env e ajuste os valores (ex.: cp .env.example .env)

# PostgreSQL
POSTGRES_USER=coink
POSTGRES_PASSWORD=coink_secret
POSTGRES_DB=coink

# Backend (coink-api)
DATABASE_URL=postgresql://coink:coink_secret@postgres:5432/coink
REDIS_URL=redis://redis:6379
JWT_SECRET=your-super-secret-jwt-key-change-in-production
PORT=5000
NODE_ENV=production
STORAGE_PATH=/app/storage

# Frontend (coink-web)
# URL da API acessível pelo browser (ex.: http://localhost:5000 em dev)
NEXT_PUBLIC_API_URL=http://localhost:5000
# URL do NextAuth (ex.: http://localhost:3000 em dev)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-generate-a-strong-random-string
